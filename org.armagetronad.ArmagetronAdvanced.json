{
    "app-id": "org.armagetronad.ArmagetronAdvanced",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "rename-icon": "armagetronad",
    "rename-desktop-file": "armagetronad.desktop",
    "rename-appdata-file": "armagetronad.appdata.xml",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "ArmagetronAdvanced",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "/share/ArmagetronAdvanced/desktop",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/glu/glu-9.json",
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        {
            "name": "armagetronad",
            "rm-configure": true,
            "config-opts": [
                "--disable-etc",
                "--disable-games",
                "--disable-uninstall",
                "progname=ArmagetronAdvanced",
                "CXXFLAGS=-DUSER_DATA_DIR='\"$${XDG_DATA_HOME}/ArmagetronAdvanced\"' -DUSER_CONFIG_DIR='\"$${XDG_CONFIG_HOME}/ArmagetronAdvanced\"' -DAUTORESOURCE_DIR='\"$${XDG_CACHE_HOME}/ArmagetronAdvanced/resource\"'"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/armagetronad/0.2.9/0.2.9.1.1/+download/armagetronad-0.2.9.1.1.tbz",
                    "sha256": "f617de700ecf1dd11f75e2932ee74796729112352d5cabaa2bc479add7dffd32"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-libpng-config.patch"
                },
                {
                    "type": "patch",
                    "path": "armagetronad-appdata.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "sed -i batch/sysinstall.in -e 's,install_link ,install ,g'",
                        "autoreconf -vfi"
                    ]
                }
            ],
            "post-install": [
                "sed -i /app/share/metainfo/*.appdata.xml -e 's,.desktop</id>,</id>,' -e 's,<!-- <launchable,<launchable,' -e 's,</launchable> -->,</launchable>,'",
                "desktop-file-edit --remove-key=Path /app/share/applications/*.desktop",
                "desktop-file-edit --remove-key=Terminal /app/share/applications/*.desktop"
            ]
        }
    ]
}
